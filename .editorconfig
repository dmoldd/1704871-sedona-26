# Файл с настройками для редактора.
#
# Если вы разрабатываете в редакторе WebStorm, BBEdit, Coda или SourceLair
# этот файл уже поддерживается и не нужно производить никаких дополнительных
# действий.
#
# Если вы ведёте разработку в другом редакторе, зайдите
# на https://editorconfig.org и в разделе «Download a Plugin»
# скачайте дополнение для вашего редактора.

root = true # Это значит, что файл лежит в корне

[*] # Это обозначение говорит, что следующие переменные будут использоваться для всех типов файлов
charset = utf-8
end_of_line = lf # Это значит, что для обозначения конца строки используется общепринятое выражение 'lf'
indent_size = 2 # Это значит, что отступ равен четырем пробелам
indent_style = space # Это значит, что для отступов используются пробелы
insert_final_newline = true # Это значит, что после сохранения по умолчанию добавляется одна новая строка
trim_trailing_whitespace = true # Подрезает ненужные пробелы в конце каждой строчки

[*.md]
trim_trailing_whitespace = false
